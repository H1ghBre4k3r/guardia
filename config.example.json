{
  "_comment": "Server Monitoring Configuration with Discord User Mentions",
  "_discord_user_id_help": "To find Discord user ID: Enable Developer Mode in Discord Settings > Advanced, then right-click on a user and select 'Copy ID'",
  "_storage_comment": "Storage configuration (optional - defaults to in-memory if omitted)",
  "storage": {
    "backend": "sqlite",
    "path": "./metrics.db",
    "retention_days": 30,
    "cleanup_interval_hours": 24,
    "_retention_note": "Metrics older than retention_days will be deleted",
    "_cleanup_note": "Cleanup runs every cleanup_interval_hours (default: 24, range: 1-720)",
    "_backend_note": "Use 'backend: none' for in-memory storage (no persistence)"
  },
  "servers": [
    {
      "ip": "192.168.1.100",
      "display": "Production Server",
      "port": 3000,
      "interval": 30,
      "token": "your-monitoring-secret",
      "limits": {
        "temperature": {
          "limit": 75,
          "grace": 3,
          "_comment": "Discord alert with user mention for critical alerts",
          "alert": {
            "discord": {
              "url": "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN",
              "user_id": "123456789012345678"
            }
          }
        },
        "usage": {
          "limit": 80,
          "grace": 5,
          "_comment": "Webhook alert without user mentions",
          "alert": {
            "webhook": {
              "url": "https://your-monitoring-service.com/webhook"
            }
          }
        }
      }
    },
    {
      "ip": "192.168.1.101",
      "display": "Development Server",
      "port": 3000,
      "interval": 60,
      "limits": {
        "temperature": {
          "limit": 85,
          "grace": 2,
          "_comment": "Discord alert mentioning different user for dev alerts",
          "alert": {
            "discord": {
              "url": "https://discord.com/api/webhooks/YOUR_DEV_WEBHOOK_ID/YOUR_DEV_WEBHOOK_TOKEN",
              "user_id": "987654321098765432"
            }
          }
        },
        "usage": {
          "limit": 90,
          "grace": 3,
          "_comment": "Discord alert without user mention (user_id is optional)",
          "alert": {
            "discord": {
              "url": "https://discord.com/api/webhooks/YOUR_DEV_WEBHOOK_ID/YOUR_DEV_WEBHOOK_TOKEN"
            }
          }
        }
      }
    },
    {
      "ip": "192.168.1.102",
      "display": "Database Server", 
      "port": 3000,
      "interval": 15,
      "_comment": "Example with team role mention instead of individual user",
      "limits": {
        "temperature": {
          "limit": 70,
          "grace": 2,
          "alert": {
            "discord": {
              "url": "https://discord.com/api/webhooks/YOUR_DB_WEBHOOK_ID/YOUR_DB_WEBHOOK_TOKEN",
              "user_id": "&876543210987654321"
            }
          }
        },
        "usage": {
          "limit": 85,
          "grace": 4,
          "_comment": "Multiple people can be mentioned by using multiple user IDs separated by space",
          "alert": {
            "discord": {
              "url": "https://discord.com/api/webhooks/YOUR_DB_WEBHOOK_ID/YOUR_DB_WEBHOOK_TOKEN",
              "user_id": "123456789012345678 987654321098765432"
            }
          }
        }
      }
    }
  ],
  "_api_comment": "API server configuration (optional - Phase 4.1)",
  "api": {
    "bind": "127.0.0.1",
    "port": 8080,
    "auth_token": "your-secret-api-token",
    "enable_cors": true,
    "_bind_note": "Use 0.0.0.0 to listen on all interfaces",
    "_auth_note": "auth_token is optional - if omitted, API will be unauthenticated",
    "_cors_note": "enable_cors allows web dashboards to access the API"
  },
  "_services_comment": "Service monitoring configuration (HTTP/HTTPS endpoints) - Phase 3",
  "services": [
    {
      "name": "API Health Check",
      "url": "https://api.example.com/health",
      "interval": 60,
      "timeout": 10,
      "method": "GET",
      "expected_status": [200, 204],
      "_comment": "Discord alert when API goes down",
      "alert": {
        "discord": {
          "url": "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN",
          "user_id": "123456789012345678"
        }
      }
    },
    {
      "name": "Website Homepage",
      "url": "https://example.com",
      "interval": 120,
      "timeout": 15,
      "method": "GET",
      "body_pattern": "Welcome to Example",
      "_comment": "Check homepage loads and contains expected text",
      "grace": 3,
      "alert": {
        "webhook": {
          "url": "https://monitoring.example.com/webhook"
        }
      }
    },
    {
      "name": "Database API",
      "url": "https://db.example.com/api/ping",
      "interval": 30,
      "timeout": 5,
      "method": "POST",
      "expected_status": [200],
      "_comment": "Critical database service - short interval and grace period",
      "grace": 2,
      "alert": {
        "discord": {
          "url": "https://discord.com/api/webhooks/YOUR_CRITICAL_WEBHOOK_ID/YOUR_CRITICAL_WEBHOOK_TOKEN",
          "user_id": "&876543210987654321"
        }
      }
    }
  ]
}